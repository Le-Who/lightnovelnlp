							"raw": "{{base_url}}/glossary/terms?project_id={{project_id}}",
							"host": ["{{base_url}}"],
							"path": ["glossary", "terms"],
							"query": [
								{
									"key": "project_id",
									"value": "{{project_id}}"
								}
							]
